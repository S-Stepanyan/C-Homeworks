{
    class Program
    {
        static void Main(string[] args)
        {
            int number = Convert.ToInt32(Console.ReadLine());
            int n1 =  number / 1000;
            int n2 =  number/ 100 % 10;
            int n3 =  number% 100 / 10;
            int n4 =  number% 10;

            int sum = n1 + n2 + n3 + n4;
            
            Console.WriteLine(n1*n2*n3*n4);
            Console.WriteLine(n1+n2+n3+n4);

           
        }
    }
}
